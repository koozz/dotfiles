# Launch into tmux
command = ~/.config/ghostty/launcher

# My theme
font-family = "FiraCode Nerd Font Mono"
font-size = 14
macos-titlebar-style = tabs
macos-titlebar-proxy-icon = hidden
theme = Catppuccin Mocha

# My experience
mouse-hide-while-typing = true

# Pass all multiplexing to tmux
# See: ~/.config/tmux/tmux.conf

# Bind new window <super>+n to tmux <C-b> <C-a>
keybind = super+n=text:\x02\x01

# Bind new tab <super>+t to tmux <C-b> c
keybind = super+t=text:\x02\x63

# Bind switch tab <super>+<num> to tmux <C-b> <num>
keybind = super+physical:one=text:\x02\x31
keybind = super+physical:two=text:\x02\x32
keybind = super+physical:three=text:\x02\x33
keybind = super+physical:four=text:\x02\x34
keybind = super+physical:five=text:\x02\x35
keybind = super+physical:six=text:\x02\x36
keybind = super+physical:seven=text:\x02\x37
keybind = super+physical:eight=text:\x02\x38
keybind = super+physical:nine=text:\x02\x39

# Bind quit <super>+q to tmux detach <C-b> d
keybind = super+q=text:\x02\x64
